# Use an official Node.js image
FROM node:18

# Set working directory
WORKDIR /app

# Copy package.json and install dependencies
COPY package*.json ./
RUN npm install

# Copy the rest of the server code
COPY . .

# Set a default port for runtime (this can be overridden by Docker Compose)
ENV PORT=3000

# Expose the port defined by BACKEND_PORT (3000)
EXPOSE 3000

# Start the backend server
CMD ["npm", "start"]
